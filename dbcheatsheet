# dump source database
pg_dump -U devdi -d shop_home -f shop_home_2017_12_06

# drop the destination database
su - postgres
dropdb shop_home_test

# recreate the destination database
createdb shop_home_test

# populate destination database with data from source database
psql shop_home_test < /home/meg/Downloads/shop_home_2017_12_06

# login to the destination database and update columns
psql shop_home_test
UPDATE base.product SET label = TRIM(label);
UPDATE base.product SET description = TRIM(description);

ALTER TABLE base.product
ADD column categ VARCHAR;

UPDATE base.product SET
    categ='Motorbyce'
WHERE category = 2;

UPDATE base.product SET
    categ='Tuktuk'
WHERE category = 1;

ALTER TABLE base.product
DROP COLUMN category;

ALTER TABLE base.product
ADD column category VARCHAR;

UPDATE base.product SET category=categ;

ALTER TABLE base.product
DROP COLUMN categ;

pg_dump -U devdi -d shop_home_test -f shop_home_test_2017_07_20



